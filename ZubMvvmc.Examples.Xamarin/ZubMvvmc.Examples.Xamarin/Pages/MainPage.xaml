<?xml version="1.0" encoding="utf-8" ?>
<zubControls:Page xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ZubMvvmc.Examples.Xamarin"
             xmlns:zubControls="clr-namespace:ZubMvvmc.Controls;assembly=ZubMvvmc"
             x:Class="ZubMvvmc.Examples.Xamarin.Pages.MainPage">
    <StackLayout Orientation="Vertical">
        <Label Text="ZubMVVMC Xamarin Example" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <Button Text="Show contacts" Command="{Binding ShowContactsCommand}" />
    </StackLayout>

</zubControls:Page>
